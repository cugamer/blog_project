<% provide(:title, "Edit Post") %>

<%= form_for :post, url: post_path(@post.id), method: :patch do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :body %>
  <%= f.text_area :body %>
  
  <%= f.submit "Create post" %>

<% end %>

<p><%= link_to "Cancel edit", post_path(@post.id)  %></p>