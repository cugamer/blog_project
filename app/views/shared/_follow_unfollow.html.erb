<p>
  <%= link_to "All #{@user.user_name}s posts", user_posts_path(@user.id) %>
  <div>
    <% if !@self %>
      <% if @following %>
        <%=link_to "Unfollow #{@user.user_name}", unfollow_path(@user.id), method: :delete %>
      <% else %>
        <%= link_to "Follow #{@user.user_name}s posts", new_follow_path(@user.id) %>
      <% end %>
    <% end %>
  </div>
</p>