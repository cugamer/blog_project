<%= provide(:title, "#{@user.user_name}s feed") %>

<h2>Your feed</h2>

<%= will_paginate @post_feed %>

<% @post_feed.each do |post| %>
  <div>
    <p><%= link_to post.title, post_path(post.id) %>  --  <%= post.created_at.strftime("%B %-d, %Y") %></p>
    <div>
      <%= simple_format post.body.truncate(500) %>
    </div>
  </div>
  

<% end %>